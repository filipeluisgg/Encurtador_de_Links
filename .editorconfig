# EditorConfig para um projeto Django
# Mais informações: https://editorconfig.org/

# Configurações gerais para todos os arquivos Python (.py)
[*.py]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8
insert_final_newline = true
max_line_length = 79

# Arquivos Python no diretório de testes (geralmente algo como "tests" ou "test")
[tests/*.py]
indent_size = 4

# Configuração para arquivos de templates Django (HTML, por exemplo)
[*.{html}]
trim_trailing_whitespace = true
insert_final_newline = true

# Para arquivos de CSS e JavaScript (caso haja no projeto Django)
[*.{css,js}]
indent_style = space
indent_size = 2  # Geralmente usa-se 2 espaços para indentação em CSS/JS
trim_trailing_whitespace = true
insert_final_newline = true

# Arquivos de configuração Django (ex: settings.py, urls.py)
[settings.py]
indent_size = 4

[urls.py]
indent_size = 4

# Arquivos de Markdown ou reStructuredText (ex: README.md, arquivos .rst)
[*.{md,rst}]
trim_trailing_whitespace = true
insert_final_newline = true
